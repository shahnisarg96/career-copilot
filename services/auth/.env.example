# Auth Service
PORT=8081
TOKEN_EXPIRY=3600
DATABASE_URL=postgresql://postgres:root@postgres:5432/mydb?schema=public

# RS256 JWT
JWT_PRIVATE_KEY_PATH=./keys/private.pem
