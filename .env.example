# Root environment variables for docker-compose.yml
#
# Usage:
# 1) Copy this file to .env in the repo root
# 2) Fill in values as needed
# 3) Run: docker compose up -d --build

# --- Database (required) ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DB=mydb
POSTGRES_PORT=5433

# --- Auth service (required) ---
ADMIN_EMAIL=
ADMIN_PASSWORD=

# --- AI ---
# Set your real OpenAI key to enable real responses.
# If empty, ai-service will run in MOCK mode.
OPENAI_API_KEY=

# Force mock AI even if a key is present (optional)
USE_MOCK_AI=false

# Gateway timeout (ms) for long-running AI requests
REQUEST_TIMEOUT=60000

# --- Optional overrides (usually fine to leave default) ---
# Vite frontend talks to the gateway via nginx proxy in the container.
# For local dev outside docker, you may set this to http://localhost:8080
VITE_API_BASE=/api
